<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @address.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @address.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="address[Name]" class="fieldLabel">Name</label>
            <input type="text" id="address[Name]" name="address[Name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="address[Address1]" class="fieldLabel">Address1</label>
            <input type="text" id="address[Address1]" name="address[Address1]" <%= placeholder("Address1") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="address[Email]" class="fieldLabel">Email</label>
            <input type="text" id="address[Email]" name="address[Email]" <%= placeholder("Email") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
